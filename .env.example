# Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
# Set to 'development' for debug mode, 'production' for production mode
FLASK_ENV=production

# Security Settings
# Secret key for session management (CRITICAL: generate a strong random key)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(24))"
SESSION_SECRET=generate_a_secure_random_key_here

# Database Configuration
# SQLite (default, simple file-based database)
DATABASE_URL=sqlite:///app.db
# PostgreSQL example
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Admin Account (IMPORTANT: change these for production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production
ADMIN_EMAIL=admin@example.com

# Logging Configuration
# Set to INFO, DEBUG, WARNING, ERROR, or CRITICAL
LOG_LEVEL=INFO

# Performance Settings
# Maximum number of connections in the connection pool
DB_POOL_SIZE=10
# Recycle connections after this many seconds
DB_POOL_RECYCLE=300